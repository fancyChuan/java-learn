<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="studentService" class="com.fancychuan.spring.aop.advice.StudentService">
        <property name="name" value="fancy"/>
        <property name="url" value="http://www.fancychuan.cn"/>
    </bean>

    <bean id="hijackBeforeMethodBean" class="com.fancychuan.spring.aop.advice.HijackBeforeMethod"/>
    <bean id="hijackAfterMethodBean" class="com.fancychuan.spring.aop.advice.HijackAfterMethod"/>
    <bean id="hijackThrowExceptionMB" class="com.fancychuan.spring.aop.advice.HijackThrowExceptionMethod"/>
    <bean id="hijackAroundBean" class="com.fancychuan.spring.aop.advice.HijackAroundMethod"/>

    <bean id="studentServiceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="studentService"/> <!-- 定义想要拦截哪个bean -->
        <property name="interceptorNames"> <!-- 定义想要用哪个bean拦截 -->
            <list>
                <!--<value>hijackBeforeMethodBean</value>-->
                <!--<value>hijackAfterMethodBean</value>-->
                <!--<value>hijackThrowExceptionMB</value>-->
                <value>hijackAroundBean</value>
            </list>
        </property>
    </bean>
</beans>